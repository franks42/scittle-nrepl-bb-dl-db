  bb-dev
  {:doc "Manage Babashka development nREPL server (start|stop|status|restart)"
   :task (let [cmd (first *command-line-args*)
               port (or (second *command-line-args*) "1667")
               pid-file ".bb-nrepl.pid"
               port-file ".bb-nrepl-port"]
           (case cmd
             "start"
             (do
               (when (.exists (clojure.java.io/file pid-file))
                 (println "âš ï¸  Server already running. Use 'bb run bb-dev stop' first.")
                 (System/exit 1))
               (println (str "ğŸš€ Starting Babashka nREPL server on port " port "..."))
               (let [proc (.start (ProcessBuilder. ["bb" "--nrepl-server" port]))
                     pid (.pid proc)]
                 (spit pid-file (str pid))
                 (spit port-file port)
                 (Thread/sleep 500)
                 (if (.isAlive proc)
                   (println (str "âœ… Server started with PID " pid " on port " port))
                   (do (println "âŒ Failed to start server")
                       (clojure.java.io/delete-file pid-file true)
                       (System/exit 1)))))

             "stop"
             (if (.exists (clojure.java.io/file pid-file))
               (let [pid (slurp pid-file)]
                 (println (str "ğŸ›‘ Stopping server with PID " pid "..."))
                 (shell (str "kill " pid))
                 (clojure.java.io/delete-file pid-file true)
                 (clojure.java.io/delete-file port-file true)
                 (println "âœ… Server stopped"))
               (println "â„¹ï¸  No server running"))

             "status"
             (if (.exists (clojure.java.io/file pid-file))
               (let [pid (slurp pid-file)
                     port (slurp port-file)]
                 (if (zero? (:exit (shell {:continue true} (str "kill -0 " pid))))
                   (println (str "âœ… Server running with PID " pid " on port " port))
                   (do
                     (println "âš ï¸  PID file exists but process not running")
                     (clojure.java.io/delete-file pid-file true)
                     (clojure.java.io/delete-file port-file true))))
               (println "â„¹ï¸  No server running"))

             "restart"
             (do
               (run 'bb-dev "stop")
               (Thread/sleep 500)
               (run 'bb-dev "start" port))

             (println "Usage: bb run bb-dev [start|stop|status|restart] [port]")))}

